{
  "browserify": {
    "src": "src/js/app.js",
    "build": "dist/js/",
    "plugin": []
  },
  "html":{
    "src": "src/templates/**/*.html",
    "build": "dist/"
  },
  "media":{
    "src": "src/assets/**/*",
    "build": "dist/assets/"
  },
  "styles": {
    "build": "dist/assets/css",
    "sass": {
      "src": "src/styles/**/*.scss",
      "includePaths": [
        "node_modules/materialize-css/sass"
      ]
    }
  },
  "vendor": {
    "require": [
      'angular-material',
      'angular-ui-router',
      'angular-material-data-table'
    ],
    "build": {
      "dirname": "dist/js/",
      "name": "vendor.js"
    }
  }
}
