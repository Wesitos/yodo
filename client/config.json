{
  "browserify": {
    "src": "src/js/app.js",
    "build": "dist/js/",
    "plugin": []
  },
  "html":{
    "src": "src/templates/**/*.html",
    "build": "dist/"
  },
  "media":{
    "src": "src/assets/**/*",
    "build": "dist/assets/"
  },
  "styles": {
    "build": "dist/css",
    "sass": {
      "src": "src/styles/**/*.scss",
      "includePaths": [
        "node_modules/angular-material"
      ]
    }
  },
  "vendor": {
    "require": [      
      "angular-ui-router",      
      "angular-aria",
      "angular-animate",
      "angular-material",
      "angular-material-data-table"
    ],
    "build": {
      "dirname": "dist/js/",
      "name": "vendor.js"
    }
  }
}
